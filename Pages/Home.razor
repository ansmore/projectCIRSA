<footer class="footer bg-dark text-light py-3">
    <div class="container">
        <div class="row">
            <!-- Columna izquierda: Acerca de la empresa -->
            <div class="col-md-4">
                <h5>CIRSA Casino</h5>
                <p>Un lugar para disfrutar y experimentar el emocionante mundo del juego.</p>
            </div>
            <!-- Columna central: Links rápidos -->
            <div class="col-md-4">
                <h5>Enlaces rápidos</h5>
                <ul class="list-unstyled">
                    <li><a href="/login">Productos</a></li>
                    <li><a href="/login">Contacto</a></li>
                </ul>
            </div>
            <!-- Columna derecha: Redes sociales -->
            <div class="col-md-4">
                <h5>Síguenos</h5>
                <a href="/login"><i class="bi bi-facebook"></i></a>
                <a href="/login"><i class="bi bi-twitter"></i></a>
                <a href="/login"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
        <div class="text-center">
            <p>&copy; 2023 CIRSA Casino. Todos los derechos reservados.</p>
        </div>
    </div>
</footer>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        var uri = new Uri(NavigationManager.Uri);

        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (queryParams.ContainsKey("ref") && queryParams["ref"] == "link100%realNoFakeLinkenMegaUpload.com")
        {
            NavigationManager.NavigateTo("/client-register");
        }
    }
}
