@page "/client-register"
@layout LoginLayout

@inject NavigationManager navigationManager

<div class="register-container">
    <h2>Registro de Cliente</h2>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert-message">@message</div>
    }

    <EditForm Model="clientRegisterModel" OnValidSubmit="HandleClientRegister">
        <InputText id="client-first-name" @bind-Value="clientRegisterModel.FirstName" placeholder="Nombre" />
        <InputText id="client-last-name" @bind-Value="clientRegisterModel.LastName" placeholder="Apellidos" />
        <InputText id="client-email" @bind-Value="clientRegisterModel.Email" placeholder="Email" />
        <InputText id="client-phone" @bind-Value="clientRegisterModel.PhoneNumber" placeholder="Teléfono" />
        <InputText id="client-password" type="password" @bind-Value="clientRegisterModel.Password" placeholder="Contraseña" />
        <InputText id="client-confirm-password" type="password" @bind-Value="clientRegisterModel.ConfirmPassword" placeholder="Confirmar Contraseña" />
        <button type="submit">Registrarse</button>
    </EditForm>
</div>

@code {
    private ClientRegisterModel clientRegisterModel = new ClientRegisterModel();
    private string message = "";

    private void HandleClientRegister()
    {
        if (!string.IsNullOrWhiteSpace(clientRegisterModel.Email) &&
            !string.IsNullOrWhiteSpace(clientRegisterModel.Password) &&
            clientRegisterModel.Password == clientRegisterModel.ConfirmPassword)
        {
            message = "Registro exitoso";
            navigationManager.NavigateTo("/");
            
        }
        else
        {
            message = "Error en el registro";
        }
    }

    public class ClientRegisterModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string PhoneNumber { get; set; } = string.Empty;
    }
}
